@{
    ViewData["Title"] = "Historical Facts";
}

<div class="hero-section text-center" style="background-image: url('/images/history-background.jpg'); background-size: cover; background-position: center; padding: 100px 20px; color: white;">
    <h1 class="display-3">Welcome to Historical Facts</h1>
    <p class="lead">Explore the rich history of the world, from ancient civilizations to modern events.</p>
    <a href="/Africas" class="btn btn-primary btn-lg mt-3">Discover African History</a>
    <a href="/Home/WW2Armies" class="btn btn-secondary btn-lg mt-3">Learn About WW2 Armies</a>
</div>

<div class="container mt-5">
    <h2 class="text-center mb-4">Featured Topics</h2>
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <img src="/images/ancient-egypt.jpg" class="card-img-top" alt="Ancient Egypt">
                <div class="card-body">
                    <h5 class="card-title">Ancient Egypt</h5>
                    <p class="card-text">Discover the wonders of the pyramids, pharaohs, and the Nile River.</p>
                    <a href="/Africas" class="btn btn-outline-primary">Learn More</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <img src="/images/ww2.jpg" class="card-img-top" alt="World War II">
                <div class="card-body">
                    <h5 class="card-title">World War II</h5>
                    <p class="card-text">Explore the events, battles, and armies of the Second World War.</p>
                    <a href="/Home/WW2Armies" class="btn btn-outline-primary">Learn More</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <img src="/images/industrial-revolution.jpg" class="card-img-top" alt="Industrial Revolution">
                <div class="card-body">
                    <h5 class="card-title">Industrial Revolution</h5>
                    <p class="card-text">Understand the transformation of industries and societies in the 18th century.</p>
                    <a href="/Home/Privacy" class="btn btn-outline-primary">Learn More</a>
                </div>
            </div>
        </div>
    </div>
</div>

<footer class="text-center mt-5 py-4" style="background-color: #f8f9fa;">
    <p>&copy; 2025 Historical Facts. All rights reserved.</p>
</footer>
