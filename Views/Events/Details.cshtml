@model HistoricalFacts.ViewModels.EventDetailViewModel
@{ ViewData["Title"] = Model.Event?.Descr; }

<h1>@Model.Event?.Descr</h1>
<hr />

<div class="row">
    <div class="col-md-8">
        <h3>Facts</h3>
        <table class="table table-striped table-sm">
            <thead>
                <tr><th>Year</th><th>Description</th><th>Continent</th></tr>
            </thead>
            <tbody>
                @foreach (var fact in Model.RelatedFacts)
                {
                    <tr>
                        <td>@fact.FactYear</td>
                        <td>@fact.Description</td>
                        <td>@fact.ContinentName</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-md-4">
        <h3>Related Personalities</h3>
        <ul class="list-group">
            @foreach (var person in Model.RelatedPersons)
            {
                <li class="list-group-item">@person.Name <small>(@person.Descr)</small></li>
            }
        </ul>
    </div>
</div>

<p class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to Events List</a>
</p>