@* @model IEnumerable<HistoricalFacts.Models.Event> *@
@model IEnumerable<Historical__Facts_3.Models.Event>
@using Historical__Facts_3.Models       
@{ ViewData["Title"] = "Manage Events"; }

<h1>@ViewData["Title"]</h1>

<p><a asp-action="Create" class="btn btn-primary">Create New Event</a></p>

<table class="table">
    <thead>
        <tr><th>ID</th><th>Description</th><th>Start Year</th><th>End Year</th><th></th></tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.EventID</td>
                <td>@item.Descr</td>
                <td>@item.StartYear</td>
                <td>@item.EndYear</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.EventID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.EventID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.EventID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>